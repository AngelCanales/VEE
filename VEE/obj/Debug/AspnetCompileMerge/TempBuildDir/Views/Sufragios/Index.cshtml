    @model IEnumerable<VEE.Models.BasedeDatos.Planilla>

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div class="content-wrapper">

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    @foreach (var item in Model)
                    {
                        


                        <div class="col-lg-3">
                            <div class="card">
                                <div class="card-header no-border">
                                    <div class="d-flex justify-content-between">
                                        <h3 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h3>
                                       
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex">
                                        
                                       
                                    </div>
                                    <!-- /.d-flex -->
                                    <div class="position-relative mb-4">
                                        <div style="height:100px;width:100px;"> 
                                            <img src='@Url.Action("SmallImagePlanilla","Imagenes", new { id = item.Id})' id="output" style="max-width:100%; max-height:100%;"/>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row justify-content-end">
                                        <a href="@Url.Action("votar","Sufragios", new { id = item.Id})" class="btn btn-primary"> @Html.DisplayFor(modelItem => item.Nombre) <i class="fa fa-arrow-circle-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                            <!-- ./col -->
                            }
                        </div>
                        <!-- /.row -->



                    </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>

</body>
</html>
